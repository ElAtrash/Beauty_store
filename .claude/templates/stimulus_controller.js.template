// Stimulus Controller Template
// Usage: Generate Stimulus controllers with proper patterns and best practices

import { Controller } from "@hotwired/stimulus"

// Connects to data-controller="{{controller_name}}"
export default class extends Controller {
  static targets = [{{target_list}}]
  static classes = [{{class_list}}] 
  static values = {
    {{value_definitions}}
  }

  // Lifecycle callbacks
  connect() {
    console.log("{{controller_name}} controller connected")
    {{connect_logic}}
  }

  disconnect() {
    console.log("{{controller_name}} controller disconnected")
    {{disconnect_logic}}
  }

  {{target_name}}TargetConnected(target) {
    console.log("{{target_name}} target connected:", target)
    {{target_connected_logic}}
  }

  {{target_name}}TargetDisconnected(target) {
    console.log("{{target_name}} target disconnected:", target)
    {{target_disconnected_logic}}
  }

  // Value change callbacks
  {{value_name}}ValueChanged(value, previousValue) {
    console.log("{{value_name}} changed:", value, "previously:", previousValue)
    {{value_changed_logic}}
  }

  // Action methods
  {{primary_action}}(event) {
    {{primary_action_logic}}
  }

  {{secondary_action}}(event) {
    event.preventDefault()
    {{secondary_action_logic}}
  }

  // Private methods
  {{helper_method}}() {
    {{helper_method_logic}}
  }

  {{state_method}}() {
    return {{state_logic}}
  }

  // Cleanup
  teardown() {
    {{teardown_logic}}
  }
}

/* Template Variables:
{{controller_name}} - Controller name in kebab-case (e.g., dropdown-menu)
{{target_list}} - Array of target names (e.g., "menu", "button")
{{class_list}} - Array of CSS class names (e.g., "open", "hidden")
{{value_definitions}} - Object defining values with types (e.g., isOpen: Boolean, position: String)
{{connect_logic}} - Code to run when controller connects
{{disconnect_logic}} - Code to run when controller disconnects
{{target_name}} - Name of a specific target (e.g., menu, button)
{{target_connected_logic}} - Code when target connects
{{target_disconnected_logic}} - Code when target disconnects
{{value_name}} - Name of a value (e.g., isOpen, position)
{{value_changed_logic}} - Code when value changes
{{primary_action}} - Main action method name (e.g., toggle, submit)
{{primary_action_logic}} - Primary action implementation
{{secondary_action}} - Secondary action method name (e.g., close, reset)
{{secondary_action_logic}} - Secondary action implementation
{{helper_method}} - Private helper method name
{{helper_method_logic}} - Helper method implementation
{{state_method}} - State checking method name
{{state_logic}} - State logic implementation
{{teardown_logic}} - Cleanup code for complex controllers

Example Usage:
data-controller="{{controller_name}}"
data-action="click->{{controller_name}}#{{primary_action}}"
data-{{controller_name}}-target="{{target_name}}"
data-{{controller_name}}-{{value_name}}-value="true"
*/