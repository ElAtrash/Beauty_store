<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <div class="notification"
       style="background-color: var(--color-interactive-primary); color: white; border: 1px solid var(--color-interactive-primary);"
       data-controller="auto-dismiss"
       data-auto-dismiss-delay-value="5000">
    <div class="flex items-center justify-between">
      <span class="text-sm font-medium"><%= message %></span>
      <button type="button"
              class="ml-4 text-white hover:text-gray-200 transition-colors"
              data-action="click->auto-dismiss#dismiss"
              aria-label="Dismiss notification">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
<% end %>
