<div class="fixed inset-0 bg-black/50 z-[120] transition-opacity duration-300 opacity-0 pointer-events-none"
     data-header-target="authPopupOverlay"
     data-action="click->header#closeAuthPopup">
</div>

<div class="fixed top-0 right-0 w-full sm:w-[35%] h-full bg-white shadow-xl z-[130] transform translate-x-full transition-transform duration-300"
     data-header-target="authPopupPanel">
  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="flex items-center justify-end p-6">
      <button class="p-2 text-gray-400 hover:text-gray-600 transition-colors"
              data-action="click->header#closeAuthPopup"
              aria-label="<%= t('auth.close') %>">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="flex-1 overflow-y-auto">
      <div class="p-6">
        <% if Current.user %>
          <!-- Signed In State -->
          <div class="space-y-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-cyan-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <%= render 'shared/icons/user', class: "w-8 h-8 text-cyan-600" %>
              </div>
              <h3 class="text-lg font-medium text-gray-900"><%= t('auth.welcome_back') %></h3>
              <p class="text-gray-600 mt-1"><%= Current.user.email_address %></p>
            </div>

            <!-- User Menu -->
            <div class="space-y-2">
              <%= link_to "#", class: "w-full flex items-center space-x-3 p-3 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span><%= t('auth.profile') %></span>
              <% end %>

              <%= link_to "#", class: "w-full flex items-center space-x-3 p-3 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <span><%= t('auth.orders') %></span>
              <% end %>

              <%= link_to "#", class: "w-full flex items-center space-x-3 p-3 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span><%= t('auth.settings') %></span>
              <% end %>
            </div>

            <!-- Sign Out -->
            <div class="border-t border-gray-200 pt-6">
              <%= link_to logout_path, data: { turbo_method: :delete }, class: "w-full flex items-center justify-center space-x-2 p-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span><%= t('auth.sign_out') %></span>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Sign In/Up State -->
          <div>
            <!-- Notifications Area -->
            <div class="relative">
              <!-- Flash Messages -->
              <div data-auth-form-target="messages" class="space-y-2">
                <% if flash[:alert] %>
                  <div class="p-3 bg-red-50 border border-red-200 rounded-md">
                    <p class="text-sm text-red-600"><%= flash[:alert] %></p>
                  </div>
                <% end %>
                <% if flash[:notice] %>
                  <div class="p-3 bg-green-50 border border-green-200 rounded-md">
                    <p class="text-sm text-green-600"><%= flash[:notice] %></p>
                  </div>
                <% end %>
              </div>

              <turbo-frame id="auth_result"></turbo-frame>

              <div class="h-16"></div>
            </div>

            <!-- Toggle Buttons -->
            <div class="flex bg-gray-100 p-1 rounded-lg mb-6">
              <button class="flex-1 py-2 px-4 text-sm font-medium rounded-md transition-colors auth-tab-btn active"
                      data-action="click->header#switchAuthTab"
                      data-tab="signin">
                <%= t('auth.sign_in') %>
              </button>
              <button class="flex-1 py-2 px-4 text-sm font-medium rounded-md transition-colors auth-tab-btn"
                      data-action="click->header#switchAuthTab"
                      data-tab="signup">
                <%= t('auth.sign_up') %>
              </button>
            </div>

            <!-- Sign In Form -->
            <div class="auth-form-container mt-6" data-form="signin">
              <%= form_with url: session_path, local: false, html: { novalidate: true, 'data-controller': 'auth-form' }, class: "space-y-4", data: { turbo_frame: "auth_result" } do |form| %>
                <div>
                  <label for="email_address" class="block text-sm font-medium text-gray-700 mb-1">
                    <%= t('auth.email') %>
                  </label>
                  <%= form.email_field :email_address,
                      autofocus: true,
                      autocomplete: "username",
                      placeholder: t('auth.email_placeholder'),
                      'data-auth-form-target': 'email',
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-colors" %>
                  <div class="text-red-600 text-xs mt-1 hidden">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
                    </svg>
                    <span></span>
                  </div>
                </div>

                <div>
                  <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                    <%= t('auth.password') %>
                  </label>
                  <div class="relative">
                    <%= form.password_field :password,
                        autocomplete: "current-password",
                        placeholder: t('auth.password_placeholder'),
                        'data-auth-form-target': 'password',
                        class: "w-full px-3 py-2 pr-12 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-colors" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
                    </svg>
                    <span></span>
                  </div>
                </div>

                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-cyan-600 focus:ring-cyan-500 border-gray-300 rounded">
                    <label for="remember_me" class="ml-2 block text-sm text-gray-700">
                      <%= t('auth.remember_me') %>
                    </label>
                  </div>
                  <%= link_to new_password_path, class: "text-sm text-cyan-600 hover:text-cyan-500" do %>
                    <%= t('auth.forgot_password') %>
                  <% end %>
                </div>

                <%= form.submit t('auth.sign_in'), class: "w-full bg-cyan-600 text-white py-2 px-4 rounded-md hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 transition-colors font-medium" %>
              <% end %>
            </div>

            <!-- Sign Up Form -->
            <div class="auth-form-container hidden mt-6" data-form="signup">
              <%= form_with model: User.new, url: register_path, local: false, html: { novalidate: true, 'data-controller': 'auth-form' }, class: "space-y-4", data: { turbo_frame: "auth_result" } do |form| %>
                <div>
                  <label for="user_email_address" class="block text-sm font-medium text-gray-700 mb-1">
                    <%= t('auth.email') %>
                  </label>
                  <%= form.email_field :email_address,
                      autocomplete: "email",
                      placeholder: t('auth.email_placeholder'),
                      'data-auth-form-target': 'email',
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-colors" %>
                  <div class="text-red-600 text-xs mt-1 hidden">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
                    </svg>
                    <span></span>
                  </div>
                </div>

                <div>
                  <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">
                    <%= t('auth.password') %>
                  </label>
                  <div class="relative">
                    <%= form.password_field :password,
                        autocomplete: "new-password",
                        placeholder: t('auth.password_placeholder'),
                        'data-auth-form-target': 'password',
                        class: "w-full px-3 py-2 pr-12 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-colors" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
                    </svg>
                    <span></span>
                  </div>
                </div>

                <div>
                  <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">
                    <%= t('auth.password_confirmation') %>
                  </label>
                  <div class="relative">
                    <%= form.password_field :password_confirmation,
                        autocomplete: "new-password",
                        placeholder: t('auth.password_confirmation_placeholder'),
                        'data-auth-form-target': 'passwordConfirmation',
                        class: "w-full px-3 py-2 pr-12 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-colors" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 5a7 7 0 100 14 7 7 0 000-14z" />
                    </svg>
                    <span></span>
                  </div>
                </div>

                <div class="text-xs text-gray-500 leading-relaxed">
                  <%= t('auth.terms_text') %>
                  <%= link_to t('auth.terms_link'), "#", class: "text-cyan-600 hover:text-cyan-500" %>
                  <%= t('auth.and') %>
                  <%= link_to t('auth.privacy_link'), "#", class: "text-cyan-600 hover:text-cyan-500" %>
                </div>

                <%= form.submit t('auth.sign_up'), class: "w-full bg-cyan-600 text-white py-2 px-4 rounded-md hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 transition-colors font-medium" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
