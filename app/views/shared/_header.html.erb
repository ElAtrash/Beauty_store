<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm border-b border-gray-200" data-controller="header">
  <!-- Header Bar -->
  <div class="container mx-auto px-1 py-4">
    <div class="flex items-center justify-between">
      <!-- Left Side: Location + Language -->
      <div class="flex items-center space-x-4">
        <!-- Location Selector -->
        <div class="flex items-center space-x-2 text-gray-600">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <button class="hover:text-cyan-600 transition-colors text-sm" data-action="click->header#selectLocation">
            <%= t('header.location.beirut') %>
          </button>
        </div>

        <!-- Language Switcher -->
        <div class="flex items-center space-x-2 text-gray-600 text-sm">
          <%= link_to "EN", "#", class: "hover:text-cyan-600 transition-colors #{'font-bold text-cyan-600' if I18n.locale == :en}", data: { action: "click->header#switchLanguage" } %>
          <span class="text-gray-300">|</span>
          <%= link_to "العربية", "#", class: "hover:text-cyan-600 transition-colors #{'font-bold text-cyan-600' if I18n.locale == :ar}", data: { action: "click->header#switchLanguage" } %>
        </div>
      </div>

      <!-- Center: Logo Icon -->
      <div class="flex justify-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <div class="w-10 h-10 flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-width="1.5" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"/>
            </svg>
          </div>
        <% end %>
      </div>

      <!-- Right Side: Action Icons -->
      <div class="flex items-center space-x-4">
        <!-- Search -->
        <button class="p-2 hover:bg-gray-100 rounded-full transition-colors group" data-action="click->header#openSearch">
          <svg class="w-5 h-5 text-gray-600 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>

        <!-- Favorites -->
        <button class="p-2 hover:bg-gray-100 rounded-full transition-colors group relative" data-action="click->header#openFavorites">
          <svg class="w-5 h-5 text-gray-600 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
          <span class="absolute -top-1 -right-1 bg-cyan-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
            3
          </span>
        </button>

        <!-- Profile -->
        <button class="p-2 hover:bg-gray-100 rounded-full transition-colors group" data-action="click->header#openProfile">
          <svg class="w-5 h-5 text-gray-600 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </button>

        <!-- Cart -->
        <button class="p-2 hover:bg-gray-100 rounded-full transition-colors group relative" data-action="click->header#openCart">
          <svg class="w-5 h-5 text-gray-600 group-hover:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.293 2.293A1 1 0 006.414 17H19M7 13v4a2 2 0 002 2h8a2 2 0 002-2v-4m-8 2h4"/>
          </svg>
          <span class="absolute -top-1 -right-1 bg-cyan-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
            2
          </span>
        </button>
      </div>
    </div>
  </div>

  <!-- Navigation Menu -->
  <nav class="bg-white">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-center space-x-8 py-3">
        <%= link_to t('header.nav.catalog'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.brands'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.new_in'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.sale'), "#", class: "text-cyan-600 font-medium" %>
        <%= link_to t('header.nav.skincare'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.makeup'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.fragrance'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
        <%= link_to t('header.nav.hair'), "#", class: "text-gray-700 hover:text-cyan-600 transition-colors font-medium" %>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Toggle (Hidden by default, will be styled later) -->
  <button class="md:hidden fixed top-4 left-4 z-60 p-2 bg-white rounded-full shadow-md" id="mobile-menu-toggle">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>
</header>
