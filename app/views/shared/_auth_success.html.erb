<turbo-frame id="auth_result m-px">
  <div class="alert-success">
    <%= render UI::IconComponent.new(name: :check_circle, css_class: "w-8 h-8 text-green-500 flex-shrink-0") %>
    <div>
      <p class="text-lg font-semibold text-green-700">Welcome back!</p>
      <p class="text-green-600 mt-1">You have signed in successfully. Redirecting...</p>
    </div>
  </div>
  <script>
    setTimeout(() => {
      // Close the auth popup and reload the page to show logged-in state
      const overlay = document.querySelector('[data-header-target="authPopupOverlay"]');
      const panel = document.querySelector('[data-header-target="authPopupPanel"]');
      if (overlay) overlay.classList.add('opacity-0', 'pointer-events-none');
      if (panel) panel.classList.add('translate-x-full');
      setTimeout(() => { window.location.reload(); }, 400);
    }, 1200);
  </script>
</turbo-frame>
