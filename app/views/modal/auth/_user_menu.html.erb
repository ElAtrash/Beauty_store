<!-- Signed In State -->
<div class="space-y-6">
  <div class="text-center">
    <div class="category-icon-container bg-interactive-100 mx-auto w-16 h-16 rounded-full flex items-center justify-center mb-4">
      <%= render UI::IconComponent.new(name: :user, css_class: "w-8 h-8 text-interactive") %>
    </div>
    <h3 class="text-lg font-medium text-gray-900"><%= t('auth.welcome_back') %></h3>
    <p class="text-gray-600 mt-1"><%= current_user.email_address %></p>
  </div>

  <!-- User Menu -->
  <div class="space-y-2">
    <% user_menu_items.each do |item| %>
      <%= link_to item[:path], class: "flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors" do %>
        <%= raw item[:icon] %>
        <span class="text-gray-900"><%= item[:text] %></span>
      <% end %>
    <% end %>
  </div>

  <!-- Sign Out -->
  <div class="border-t border-gray-200 pt-6">
    <%= link_to logout_path,
        data: { turbo_method: :delete },
        class: "w-full flex items-center justify-center gap-2 p-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors font-medium" do %>
      <%= render UI::IconComponent.new(name: :signout, css_class: "w-5 h-5") %>
      <span><%= t('auth.sign_out') %></span>
    <% end %>
  </div>
</div>