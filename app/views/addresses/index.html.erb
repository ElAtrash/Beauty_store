<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= t("addresses.title") %></h1>
    <%= link_to new_address_path, class: "btn btn-primary" do %>
      <%= render UI::IconComponent.new(name: :plus, css_class: "w-5 h-5 inline-block mr-2") %>
      <%= t("addresses.add_address") %>
    <% end %>
  </div>

  <% if @addresses.any? %>
    <div id="addresses-list" class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= render partial: "addresses/addresses_list", locals: { addresses: @addresses } %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t("addresses.no_addresses") %></h3>
      <p class="text-gray-600 mb-6"><%= t("addresses.no_addresses_description", default: "Add your first address to make checkout faster") %></p>
      <%= link_to new_address_path, class: "btn btn-primary" do %>
        <%= render UI::IconComponent.new(name: :plus, css_class: "w-5 h-5 inline-block mr-2") %>
        <%= t("addresses.add_address") %>
      <% end %>
    </div>
  <% end %>
</div>

<div id="flash-messages"></div>
