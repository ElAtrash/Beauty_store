<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to addresses_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
      <%= render UI::IconComponent.new(name: :arrow_left, css_class: "w-5 h-5 mr-2") %>
      <%= t("common.back") %>
    <% end %>
  </div>

  <h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t("addresses.edit_address") %></h1>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= render Addresses::FormComponent.new(address: @address) %>
  </div>
</div>
