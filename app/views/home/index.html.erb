<%= render HeroCarouselComponent.new %>

<%= render FeaturedProductsComponent.new(products: @featured_products, pagy: @pagy) %>

<div class="container mx-auto px-4 py-16">
  <section class="text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
      <%= t('home.welcome') %>
    </h2>
    <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
      <%= t('home.subtitle') %>
    </p>
    <div class="text-sm text-gray-500">
      <%= t('home.current_locale') %>: <%= I18n.locale.upcase %>
    </div>
  </section>
  <section class="mb-16">
    <h3 class="text-2xl font-bold text-gray-800 mb-8 text-center">
      <%= t('home.featured_categories') %>
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="category-card">
        <div class="category-icon-container bg-pink-100">
          <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_skincare') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_skincare_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-purple-100">
          <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_makeup') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_makeup_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-cyan-100">
          <svg class="w-8 h-8 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_fragrance') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_fragrance_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-rose-100">
          <svg class="w-8 h-8 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_hair') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_hair_desc') %></p>
      </div>
    </div>
  </section>
</div>
