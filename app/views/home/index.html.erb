<%= render HeroCarouselComponent.new %>

<%= render FeaturedProductsComponent.new(products: @featured_products, pagy: @pagy) %>

<div class="container mx-auto px-4 py-16">
  <section class="text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
      <%= t('home.welcome') %>
    </h2>
    <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
      <%= t('home.subtitle') %>
    </p>
    <div class="text-sm text-gray-500">
      <%= t('home.current_locale') %>: <%= I18n.locale.upcase %>
    </div>
  </section>
  <section class="mb-16">
    <h3 class="text-2xl font-bold text-gray-800 mb-8 text-center">
      <%= t('home.featured_categories') %>
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="category-card">
        <div class="category-icon-container bg-pink-100">
          <%= render IconComponent.new(name: :heart, class: "w-8 h-8 text-pink-500") %>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_skincare') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_skincare_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-purple-100">
          <%= render IconComponent.new(name: :makeup, class: "w-8 h-8 text-purple-500") %>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_makeup') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_makeup_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-cyan-100">
          <%= render IconComponent.new(name: :book_open, class: "w-8 h-8 text-cyan-500") %>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_fragrance') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_fragrance_desc') %></p>
      </div>
      <div class="category-card">
        <div class="category-icon-container bg-rose-100">
          <%= render IconComponent.new(name: :lightning_bolt, class: "w-8 h-8 text-rose-500") %>
        </div>
        <h4 class="font-semibold text-gray-800 mb-2"><%= t('home.category_hair') %></h4>
        <p class="text-gray-600 text-sm"><%= t('home.category_hair_desc') %></p>
      </div>
    </div>
  </section>
</div>
