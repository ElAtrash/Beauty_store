<div class="space-y-1" id="product-pricing">
  <div class="flex items-baseline space-x-2">
    <span class="text-3xl font-light">
      <%= product_data.price_info[:formatted_current_price] %>
    </span>
    <% if product_data.price_info[:on_sale] && product_data.price_info[:original_cents].present? %>
      <span class="text-lg text-subtle line-through">
        <%= product_data.price_info[:formatted_original_price] %>
      </span>
      <span class="discount-badge text-sm font-medium text-pink-600">
        <%= product_data.price_info[:discount_percentage] %>%
      </span>
    <% end %>
  </div>
  <p class="text-sm" data-stock-status="<%= product_data.stock_info[:available] ? (product_data.stock_info[:quantity] <= 5 ? 'low_stock' : 'available') : 'out_of_stock' %>">
    <%= product_data.stock_info[:message] %>
  </p>
</div>
