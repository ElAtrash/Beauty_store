<section class="product-grid-section py-12 md:py-16 bg-white" data-controller="product-grid" data-product-grid-pagy-url-value="<%= products_path %>">
  <div class="container mx-auto px-4">
    <!-- Section Title -->
    <h1 class="section-title">
      You might be interested
    </h1>
    <!-- Products Grid -->
    <div class="products-grid"
         data-product-grid-target="container"
         id="products-container">
      <!-- Initial Products -->
      <% @products.each do |product| %>
        <div data-product-grid-target="product">
          <%= render ProductCardComponent.new(product: product) %>
        </div>
      <% end %>
    </div>
    <!-- Show More Button -->
    <% if @pagy.next %>
      <div class="text-center mt-8 md:mt-12">
        <button class="btn-show-more"
                data-action="click->product-grid#loadMore"
                data-product-grid-target="loadMoreBtn"
                data-product-grid-next-page-value="<%= @pagy.next %>"
                id="load-more-button">
          Show more
        </button>
      </div>
    <% end %>
    <!-- Loading indicator -->
    <div class="hidden text-center mt-8" data-product-grid-target="loading">
      <div class="inline-flex items-center px-6 py-3 text-gray-600">
        <%= render IconComponent.new(name: :loading, class: "animate-spin -ml-1 mr-3 h-5 w-5 text-gray-600") %>
        Loading more products...
      </div>
    </div>
  </div>
</section>
