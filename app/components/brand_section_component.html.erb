<section class="brand-section" id="<%= section_id %>">
  <div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6 flex items-center">
      <span class="letter-heading"><%= letter %></span>
      <span class="ml-4 text-lg font-normal text-muted">
        <%= brands.count %> <%= brands.count == 1 ? "brand" : "brands" %>
      </span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% brands.each do |brand| %>
        <div class="brand-card">
          <%= link_to brand_path(brand),
              class: "brand-link",
              data: {
                turbo: true,
                turbo_frame: "_top"
              } do %>
            <div class="brand-card-content">
              <h3 class="brand-name"><%= brand.name %></h3>
              <p class="brand-products-count">
                <%= brand_products_count(brand) %> <%= pluralize_products(brand_products_count(brand)) %>
              </p>
              <% if brand.description.present? %>
                <p class="brand-description">
                  <%= truncate(brand.description, length: 100) %>
                </p>
              <% end %>
            </div>
            <div class="brand-card-arrow">
              <%= render UI::IconComponent.new(name: :arrow_right, css_class: "w-4 h-4") %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
