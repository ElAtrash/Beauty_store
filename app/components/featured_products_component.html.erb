<section class="product-grid-section py-12 md:py-16 bg-white"
         data-controller="product-grid"
         data-product-grid-pagy-url-value="<%= root_path %>">
  <div class="container mx-auto px-4">
    <!-- Section Title -->
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8 md:mb-12 text-gray-900">
      You might be interested
    </h2>
    <!-- Products Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6"
         data-product-grid-target="container"
         id="products-container">
      <!-- Initial Products -->
      <% products.each do |product| %>
        <div data-product-grid-target="product">
          <%= render ProductCardComponent.new(product: product) %>
        </div>
      <% end %>
    </div>
    <!-- Show More Button -->
    <% if has_more_products? %>
      <div class="text-center mt-8 md:mt-12">
        <%= render "shared/show_more_button", next_page: next_page %>
      </div>
    <% end %>
    <!-- Loading indicator -->
    <div class="hidden text-center mt-8" data-product-grid-target="loading">
      <div class="inline-flex items-center px-6 py-3 text-gray-600">
        <%= render IconComponent.new(name: :loading, class: "animate-spin -ml-1 mr-3 h-5 w-5 text-gray-600") %>
        Loading more products...
      </div>
    </div>
  </div>
</section>
