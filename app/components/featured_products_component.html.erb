<section class="product-grid-section py-12 md:py-16 bg-white"
         data-controller="catalog--product-grid"
         data-catalog--product-grid-pagy-url-value="<%= root_path %>">
  <div class="container mx-auto px-4">
    <!-- Section Title -->
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8 md:mb-12">
      You might be interested
    </h2>
    <!-- Products Grid -->
    <div class="products-grid"
         data-catalog--product-grid-target="container"
         id="products-container">
      <!-- Initial Products -->
      <%= render ProductCardComponent.with_collection(products) do |component| %>
        <div data-catalog--product-grid-target="product">
          <%= component %>
        </div>
      <% end %>
    </div>
    <!-- Show More Button -->
    <% if has_more_products? %>
      <div class="text-center mt-8 md:mt-12">
        <%= render "shared/show_more_button", next_page: next_page %>
      </div>
    <% end %>
    <!-- Loading indicator -->
    <div class="hidden text-center mt-8" data-catalog--product-grid-target="loading">
      <div class="inline-flex items-center px-6 py-3 text-secondary">
        <%= render IconComponent.new(name: :loading, class: "animate-spin -ml-1 mr-3 h-5 w-5 text-muted") %>
        Loading more products...
      </div>
    </div>
  </div>
</section>
