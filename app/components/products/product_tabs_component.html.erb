<div class="max-w-2xl mx-auto" data-controller="products--tabs">
  <% if tab_sections.any? %>
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8 overflow-x-auto">
        <%= render ProductTabComponent.with_collection(sections_with_metadata) %>
      </nav>
    </div>
    <div class="mt-8">
      <%= render ProductTabPanelComponent.with_collection(sections_with_metadata) %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-subtle mb-4">
        <%= render IconComponent.new(name: :document_text, class: "w-12 h-12 mx-auto") %>
      </div>
      <p class="text-subtle">Product details will be available soon.</p>
    </div>
  <% end %>
</div>
