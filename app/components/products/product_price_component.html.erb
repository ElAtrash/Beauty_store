<!-- Price Section -->
<div class="space-y-1">
  <div class="flex items-baseline space-x-2">
    <span class="text-3xl font-light text-gray-900"
          data-products--variant-selector-target="currentPrice">
      <%= price_info.current %>
    </span>

    <% if show_sale_badge? %>
      <span class="text-lg text-gray-500 line-through"
            data-products--variant-selector-target="originalPrice">
        <%= price_info.original %>
      </span>
      <span class="text-sm font-medium text-pink-600">
        -<%= price_info.discount_percentage %>%
      </span>
    <% end %>
  </div>

  <!-- Stock Status -->
  <p class="text-sm <%= stock_css_class %>"
     data-products--variant-selector-target="stockStatus">
    <%= stock_info.message %>
  </p>
</div>
