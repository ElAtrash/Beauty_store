<%= form_with model: address, url: url, method: method, id: form_id, data: { turbo_frame: turbo_frame_id }, class: "space-y-4" do |f| %>
  <% if address.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :label, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :label, label_options,
        { include_blank: t("common.select_option") },
        class: "form-select w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
  </div>

  <div>
    <%= f.label :address_line_1, t("activerecord.attributes.address.address_line_1"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :address_line_1,
        placeholder: t("addresses.placeholders.address_line_1", default: "Street address"),
        class: "form-input w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
  </div>

  <div>
    <%= f.label :address_line_2, t("activerecord.attributes.address.address_line_2"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :address_line_2,
        placeholder: t("addresses.placeholders.address_line_2", default: "Apartment, suite, etc. (optional)"),
        class: "form-input w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :city,
          placeholder: t("addresses.placeholders.city", default: "City"),
          class: "form-input w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
    </div>

    <div>
      <%= f.label :governorate, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :governorate, governorate_options,
          { include_blank: t("common.select_governorate", default: "Select governorate") },
          class: "form-select w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
    </div>
  </div>

  <div>
    <%= f.label :landmarks, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :landmarks,
        rows: 2,
        placeholder: t("addresses.placeholders.landmarks", default: "Nearby landmarks (e.g., Near ABC Mall)"),
        class: "form-textarea w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
  </div>

  <div>
    <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :phone_number,
        placeholder: t("addresses.placeholders.phone", default: "70123456"),
        class: "form-input w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" %>
    <p class="mt-1 text-xs text-gray-500"><%= t("addresses.phone_hint", default: "Lebanese mobile or landline") %></p>
  </div>

  <div class="flex items-center">
    <%= f.check_box :default, class: "rounded border-gray-300 text-primary-600 focus:ring-primary-500" %>
    <%= f.label :default, t("addresses.set_as_default"), class: "ml-2 text-sm text-gray-700" %>
  </div>

  <div class="flex items-center gap-3 pt-4">
    <%= f.submit submit_button_text, class: "btn btn-primary flex-1" %>
    <%= cancel_button %>
  </div>
<% end %>
