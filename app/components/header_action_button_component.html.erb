<button class="p-2 hover:bg-gray-100 rounded-full transition-colors group relative"
        data-action="click->header#<%= action %>"
  aria-label="<%= aria_label %>"
  type="button">
  <%= render "shared/icons/#{icon}", class: "w-5 h-5 text-gray-600 group-hover:text-cyan-600" %>
  <% if has_badge? %>
    <span class="absolute -top-1 -right-1 bg-cyan-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center"
          aria-label="<%= badge_aria_label %>">
      <%= badge %>
    </span>
  <% end %>
</button>
