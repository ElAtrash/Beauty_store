<div class="flex items-start gap-4 py-3">
  <%= link_to product_url, class: "block w-16 h-16 bg-gray-100 flex-shrink-0 overflow-hidden hover:opacity-80 transition-opacity duration-200" do %>
    <%= product_image %>
  <% end %>
  <div class="flex-1 min-w-0">
    <h4 class="text-sm font-medium leading-tight line-clamp-2 mb-1">
      <%= link_to product_name, product_url, class: "text-text-primary hover:text-interactive-primary transition-colors duration-200" %>
    </h4>
    <% if variant_name.present? %>
      <p class="text-xs text-text-muted mb-2"><%= variant_name %></p>
    <% end %>
    <div class="flex items-center justify-between text-sm">
      <span class="text-text-secondary">Qty: <%= quantity %></span>
      <span class="font-medium text-text-primary"><%= total_price&.format || "-" %></span>
    </div>
  </div>
</div>
