<% if has_description? %>
  <section class="brand-description-section py-12 md:py-16 bg-white" data-controller="text-expander">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-4 gap-6">
        <div class="col-start-3 col-span-2">
          <h2 class="text-2xl md:text-3xl font-bold text-left mb-6 md:mb-8">
            <%= brand_name %>
          </h2>

          <div class="text-left">
            <% if long_description? %>
              <div data-text-expander-target="truncated" class="text-secondary leading-relaxed">
                <%= simple_format(truncated_description, class: "mb-4") %>
                <button type="button"
                        class="text-interactive hover:text-interactive-secondary transition-colors text-sm font-medium underline-offset-2 hover:underline"
                        data-action="click->text-expander#toggle">
                  Read more
                </button>
              </div>

              <div data-text-expander-target="expanded" class="hidden text-secondary leading-relaxed">
                <%= simple_format(description, class: "mb-4") %>
                <button type="button"
                        class="text-interactive hover:text-interactive-secondary transition-colors text-sm font-medium underline-offset-2 hover:underline"
                        data-action="click->text-expander#toggle">
                  Read less
                </button>
              </div>
            <% else %>
                <div class="text-secondary leading-relaxed">
                <%= simple_format(description, class: "mb-4") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
