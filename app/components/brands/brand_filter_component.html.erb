<div class="bg-white">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center mb-4">
      <div class="flex items-center gap-6">
        <button type="button" class="filter-toggle-button">
          <%= render IconComponent.new(name: :adjustments_horizontal, class: "w-5 h-5") %>
          filters
        </button>

        <div class="relative">
          <button type="button" class="filter-toggle-button">
            by popularity
            <%= render IconComponent.new(name: :chevron_down, class: "w-5 h-5") %>
          </button>
        </div>
      </div>

      <div class="text-base text-gray-700 font-medium">
        <%= product_count_text %>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <% filter_options.each do |option| %>
        <button type="button" class="brand-filter-button">
          <%= option %>
          <%= render IconComponent.new(name: :chevron_down, class: "w-3.5 h-3.5") %>
        </button>
      <% end %>
    </div>
  </div>
</div>
