<!-- Authentication Popup -->
<div class="modal-overlay auth-popup-overlay"
     data-navigation--auth-popup-target="overlay"
     data-action="click->navigation--auth-popup#closePopup">
</div>
<div class="auth-sidebar auth-popup-panel"
     data-navigation--auth-popup-target="panel"
     data-auth-tab="signin">
  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="flex items-center justify-end p-6">
      <button class="p-2 text-subtle hover:text-interactive transition-colors"
              data-action="click->navigation--auth-popup#closePopup"
        aria-label="<%= t('auth.close') %>">
        <%= render IconComponent.new(name: :close, class: "w-6 h-6") %>
      </button>
    </div>
    <!-- Content -->
    <div class="flex-1 overflow-y-auto">
      <div class="p-6">
        <% if signed_in? %>
          <!-- Signed In State -->
          <div class="space-y-6">
            <div class="text-center">
              <div class="category-icon-container bg-interactive-100">
                <%= render IconComponent.new(name: :user, class: "w-8 h-8 text-interactive") %>
              </div>
              <h3 class="text-lg font-medium"><%= t('auth.welcome_back') %></h3>
              <p class="text-muted mt-1"><%= current_user.email_address %></p>
            </div>
            <!-- User Menu -->
            <div class="space-y-2">
              <% user_menu_items.each do |item| %>
                <%= link_to item[:path], class: "mobile-menu-item" do %>
                  <%= raw item[:icon] %>
                  <span><%= item[:text] %></span>
                <% end %>
              <% end %>
            </div>
            <!-- Sign Out -->
            <div class="border-t border-gray-200 pt-6">
              <%= link_to logout_path, data: { turbo_method: :delete }, class: "w-full flex items-center justify-center space-x-2 p-3 text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
                <%= render IconComponent.new(name: :signout, class: "w-5 h-5") %>
                <span><%= t('auth.sign_out') %></span>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Sign In/Up State -->
          <div data-controller="auth-tab auth-form-coordinator"
               data-auth-tab-active-tab-value="signin">
            <!-- Notifications Area -->
            <div class="relative">
              <!-- Flash Messages -->
              <div class="space-y-2">
                <% if flash[:alert] %>
                  <div class="p-3 bg-red-50 border border-red-200 rounded-md">
                    <p class="text-sm text-red-600"><%= flash[:alert] %></p>
                  </div>
                <% end %>
                <% if flash[:notice] %>
                  <div class="p-3 bg-green-50 border border-green-200 rounded-md">
                    <p class="text-sm text-green-600"><%= flash[:notice] %></p>
                  </div>
                <% end %>
              </div>
              <!-- Turbo Frame for handling auth responses -->
              <turbo-frame id="auth_result"></turbo-frame>
              <!-- Spacer -->
              <div class="h-16"></div>
            </div>
            <!-- Toggle Buttons -->
            <div class="flex bg-gray-100 p-1 rounded-lg mb-6">
              <button class="auth-tab-button signin-tab"
                      data-action="click->auth-tab#switchTab"
                data-tab="signin">
                <%= t('auth.sign_in') %>
              </button>
              <button class="auth-tab-button signup-tab"
                      data-action="click->auth-tab#switchTab"
                data-tab="signup">
                <%= t('auth.sign_up') %>
              </button>
            </div>
            <!-- Sign In Form -->
            <div class="auth-form-container mt-6" data-form="signin">
              <%= form_with url: session_path, local: false, html: { novalidate: true }, class: "space-y-4", data: { controller: "form-validation", turbo_frame: "auth_result", form_validation_translations_value: t('javascript.auth_form').to_json } do |form| %>
                <div>
                  <label for="email_address" class="block text-sm font-medium text-secondary mb-1">
                    <%= t('auth.email') %>
                  </label>
                  <%= form.email_field :email_address,
                      autofocus: true,
                      autocomplete: "username",
                      placeholder: t('auth.email_placeholder'),
                      data: { validation_rules: 'email' },
                      class: "form-input" %>
                  <div class="text-red-600 text-xs mt-1 hidden field-error">
                    <%= render IconComponent.new(name: :error, class: "w-4 h-4 flex-shrink-0") %>
                    <span></span>
                  </div>
                </div>
                <div>
                  <label for="password" class="block text-sm font-medium text-secondary mb-1">
                    <%= t('auth.password') %>
                  </label>
                  <div class="relative" data-controller="password-toggle"
                       data-password-toggle-show-icon-path-value="<%= eye_icon_path %>"
                       data-password-toggle-hide-icon-path-value="<%= eye_off_icon_path %>">
                    <%= form.password_field :password,
                        autocomplete: "current-password",
                        placeholder: t('auth.password_placeholder'),
                        data: {
                          validation_rules: 'password',
                          password_toggle_target: 'field'
                        },
                        class: "form-input pr-12" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center"
                            data-action="click->password-toggle#toggle"
                            data-password-toggle-target="button">
                      <%= render IconComponent.new(name: :eye, class: "w-5 h-5 text-subtle") %>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden field-error">
                    <%= render IconComponent.new(name: :error, class: "w-4 h-4 flex-shrink-0") %>
                    <span></span>
                  </div>
                </div>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <input id="remember_me" name="remember_me" type="checkbox" class="form-checkbox">
                    <label for="remember_me" class="ml-2 block text-sm text-secondary">
                      <%= t('auth.remember_me') %>
                    </label>
                  </div>
                  <%= link_to new_password_path, class: "text-sm hover:text-interactive-primary" do %>
                    <%= t('auth.forgot_password') %>
                  <% end %>
                </div>
                <%= form.submit t('auth.sign_in'), class: "w-full bg-text-primary text-white py-2 px-4 rounded-md hover:bg-interactive-primary focus:outline-none transition-colors font-medium" %>
              <% end %>
            </div>
            <!-- Sign Up Form -->
            <div class="auth-form-container mt-6" data-form="signup">
              <%= form_with model: User.new, url: register_path, local: false, html: { novalidate: true }, class: "space-y-4", data: { controller: "form-validation", turbo_frame: "auth_result", form_validation_translations_value: t('javascript.auth_form').to_json } do |form| %>
                <div>
                  <label for="user_email_address" class="block text-sm font-medium text-secondary mb-1">
                    <%= t('auth.email') %>
                  </label>
                  <%= form.email_field :email_address,
                      autocomplete: "email",
                      placeholder: t('auth.email_placeholder'),
                      data: { validation_rules: 'email' },
                      class: "form-input" %>
                  <div class="text-red-600 text-xs mt-1 hidden field-error">
                    <%= render IconComponent.new(name: :error, class: "w-4 h-4 flex-shrink-0") %>
                    <span></span>
                  </div>
                </div>
                <div>
                  <label for="user_password" class="block text-sm font-medium text-secondary mb-1">
                    <%= t('auth.password') %>
                  </label>
                  <div class="relative" data-controller="password-toggle"
                       data-password-toggle-show-icon-path-value="<%= eye_icon_path %>"
                       data-password-toggle-hide-icon-path-value="<%= eye_off_icon_path %>">
                    <%= form.password_field :password,
                        autocomplete: "new-password",
                        placeholder: t('auth.password_placeholder'),
                        data: {
                          validation_rules: 'password',
                          password_toggle_target: 'field'
                        },
                        class: "form-input pr-12" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center"
                            data-action="click->password-toggle#toggle"
                            data-password-toggle-target="button">
                      <%= render IconComponent.new(name: :eye, class: "w-5 h-5 text-subtle") %>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden field-error">
                    <%= render IconComponent.new(name: :error, class: "w-4 h-4 flex-shrink-0") %>
                    <span></span>
                  </div>
                </div>
                <div>
                  <label for="user_password_confirmation" class="block text-sm font-medium text-secondary mb-1">
                    <%= t('auth.password_confirmation') %>
                  </label>
                  <div class="relative" data-controller="password-toggle"
                       data-password-toggle-show-icon-path-value="<%= eye_icon_path %>"
                       data-password-toggle-hide-icon-path-value="<%= eye_off_icon_path %>">
                    <%= form.password_field :password_confirmation,
                        autocomplete: "new-password",
                        placeholder: t('auth.password_confirmation_placeholder'),
                        data: {
                          validation_rules: 'passwordConfirmation',
                          password_toggle_target: 'field'
                        },
                        class: "form-input pr-12" %>
                    <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center"
                            data-action="click->password-toggle#toggle"
                            data-password-toggle-target="button">
                      <%= render IconComponent.new(name: :eye, class: "w-5 h-5 text-subtle") %>
                    </button>
                  </div>
                  <div class="text-red-600 text-xs mt-1 hidden field-error">
                    <%= render IconComponent.new(name: :error, class: "w-4 h-4 flex-shrink-0") %>
                    <span></span>
                  </div>
                </div>
                <div class="text-xs text-muted leading-relaxed">
                  <%= t('auth.terms_text') %>
                  <%= link_to t('auth.terms_link'), "#", class: "hover:text-interactive-primary" %>
                  <%= t('auth.and') %>
                  <%= link_to t('auth.privacy_link'), "#", class: "hover:text-interactive-primary" %>
                </div>
                <%= form.submit t('auth.sign_up'), class: "w-full bg-text-primary text-white py-2 px-4 rounded-md hover:bg-interactive-primary focus:outline-none transition-colors font-medium" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
