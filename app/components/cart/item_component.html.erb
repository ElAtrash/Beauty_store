<div class="group flex items-start gap-4 py-4 hover:bg-gray-50 transition-colors duration-200 px-2 -mx-2">
  <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
    <% if featured_image.attached? %>
      <%= image_tag featured_image,
          alt: product_name,
          class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <%= render UI::IconComponent.new(name: :photo, css_class: "w-6 h-6 text-gray-400") %>
      </div>
    <% end %>
  </div>
  <div class="flex-1 min-w-0 flex flex-col gap-2">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1 min-w-0">
        <h4 class="text-sm font-medium text-gray-900 leading-tight line-clamp-2">
          <%= link_to product_name, product_path(product), class: "text-gray-900 hover:text-interactive-primary transition-colors duration-200" %>
        </h4>
      </div>
      <div class="text-right flex-shrink-0 pr-2">
        <p class="text-sm font-medium text-gray-900">
          <%= total_price.format %>
        </p>
      </div>
    </div>
    <div class="flex items-center justify-between gap-4">
      <div class="flex-1 min-w-0">
        <p class="text-xs text-gray-600">
          <%= variant_display_name %>
        </p>
      </div>
      <div class="flex-shrink-0">
        <div class="opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-all duration-200 ease-in-out">
          <div class="flex items-center gap-2">
            <div class="flex items-center">
              <%= button_to cart_item_path(cart_item),
                  method: :patch,
                  params: decrease_quantity_params,
                  class: "qty-btn qty-btn--small icon-interactive",
                  aria: { label: "Decrease quantity of #{product_name}" },
                  disabled: !can_decrease_quantity? do %>
                <%= render UI::IconComponent.new(name: :minus, css_class: "w-3 h-3") %>
              <% end %>
              <span class="px-3 py-1 text-sm font-medium text-gray-900 min-w-[2rem] text-center">
                <%= quantity %>
              </span>
              <%= button_to cart_item_path(cart_item),
                  method: :patch,
                  params: increase_quantity_params,
                  class: "qty-btn qty-btn--small icon-interactive",
                  aria: { label: "Increase quantity of #{product_name}" },
                  disabled: !can_increase_quantity? do %>
                <%= render UI::IconComponent.new(name: :plus, css_class: "w-3 h-3") %>
              <% end %>
            </div>
            <%= button_to cart_item_path(cart_item),
                method: :delete,
                title: "Remove item",
                class: "qty-btn icon-interactive ml-2",
                aria: { label: "Remove #{product_name}" },
                form: { data: { confirm: "Remove this item from your cart?" } } do %>
              <%= render UI::IconComponent.new(name: :close, css_class: "w-4 h-4") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
