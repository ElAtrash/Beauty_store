<div class="<%= slide_classes %>"
     data-ui--hero-carousel-target="<%= slide_data_attributes[:ui_hero_carousel_target] %>"
     data-slide-index="<%= slide_data_attributes[:slide_index] %>">
  <div class="<%= gradient_background_classes %>"></div>
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="carousel-content-container">
    <div class="text-center text-white">
      <h1 class="hero-title <%= slide_animation_classes %>">
        <%= title %>
      </h1>
      <p class="hero-subtitle <%= subtitle_animation_classes %>">
        <%= subtitle %>
      </p>
      <div class="hero-cta-container <%= cta_animation_classes %>">
        <a href="#" class="btn-interactive text-base md:text-lg px-6 md:px-8 py-3 md:py-4">
          <%= cta_primary %>
        </a>
        <a href="#" class="hero-cta-secondary">
          <%= cta_secondary %>
        </a>
      </div>
    </div>
  </div>
</div>
