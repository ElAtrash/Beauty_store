<section class="hero-carousel relative w-full h-[550px] md:h-[600px]" data-controller="ui--hero-carousel">
  <!-- Carousel Container -->
  <div class="carousel-container relative w-full h-full overflow-hidden">
    <%= render HeroSlideComponent.with_collection(slides) %>
  </div>

    <!-- Click Zones for Navigation -->
    <% if slides.size > 1 %>
      <!-- Left Click Zone for Previous Slide -->
      <div class="gallery-click-zone gallery-click-zone--left"
           style="cursor: url('<%= cursor_data_url(:cursor_left) %>') 16 16, pointer;"
           data-action="click->ui--hero-carousel#previousSlide">
      </div>

      <!-- Right Click Zone for Next Slide -->
      <div class="gallery-click-zone gallery-click-zone--right"
           style="cursor: url('<%= cursor_data_url(:cursor_right) %>') 16 16, pointer;"
           data-action="click->ui--hero-carousel#nextSlide">
      </div>
    <% end %>
  </div>
  <!-- Dots Indicator -->
  <div class="carousel-dots-container">
    <% slides.each_with_index do |slide, index| %>
      <button class="w-2 h-2 md:w-3 md:h-3 rounded-full <%= index == 0 ? 'bg-white/60 hover:bg-white' : 'bg-white/30 hover:bg-white/60' %> transition-all duration-300"
              data-action="click->ui--hero-carousel#goToSlide"
              data-slide-index="<%= index %>"
              data-ui--hero-carousel-target="dot"></button>
    <% end %>
  </div>
  <!-- Scroll Indicator (hidden on mobile) -->
  <div class="hidden md:block scroll-indicator">
    <div class="w-6 h-10 border-2 border-white/60 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/60 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>
