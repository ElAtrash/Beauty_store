<section class="hero-carousel relative w-full h-[550px] md:h-[600px]" data-controller="hero-carousel">
  <!-- Carousel Container -->
  <div class="carousel-container relative w-full h-full overflow-hidden">
    <% slides.each do |slide| %>
      <!-- Slide <%#= slide[:index] + 1 %> -->
      <div class="carousel-slide absolute inset-0 w-full h-full transition-opacity duration-700 ease-in-out <%= slide[:opacity] %>"
           data-hero-carousel-target="slide"
           data-slide-index="<%= slide[:index] %>">
        <div class="absolute inset-0 bg-gradient-to-br <%= slide[:gradient] %>"></div>
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="relative z-10 flex items-center justify-center h-full pt-16 md:pt-20 px-4">
          <div class="text-center text-white">
            <h1 class="text-3xl md:text-5xl lg:text-7xl font-bold mb-4 md:mb-6 <%= slide_animation_classes(slide) %>">
              <%= slide[:title] %>
            </h1>
            <p class="text-lg md:text-xl lg:text-2xl mb-6 md:mb-8 max-w-2xl mx-auto <%= subtitle_animation_classes(slide) %>">
              <%= slide[:subtitle] %>
            </p>
            <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center <%= cta_animation_classes(slide) %>">
              <a href="#" class="btn-primary text-base md:text-lg px-6 md:px-8 py-3 md:py-4">
                <%= slide[:cta_primary] %>
              </a>
              <a href="#" class="btn-secondary text-base md:text-lg px-6 md:px-8 py-3 md:py-4 bg-white/20 border-white/30 text-white hover:bg-white/30">
                <%= slide[:cta_secondary] %>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Navigation Arrows (hidden on mobile) -->
  <button class="hidden md:block absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 text-white p-3 rounded-full transition-all duration-300 backdrop-blur-sm"
          data-action="click->hero-carousel#previousSlide"
    aria-label="<%= t('hero.previous_slide') %>">
    <%= raw navigation_arrow_svg(:left) %>
  </button>
  <button class="hidden md:block absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 text-white p-3 rounded-full transition-all duration-300 backdrop-blur-sm"
          data-action="click->hero-carousel#nextSlide"
    aria-label="<%= t('hero.next_slide') %>">
    <%= raw navigation_arrow_svg(:right) %>
  </button>
  <!-- Dots Indicator -->
  <div class="absolute bottom-4 md:bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex space-x-2 md:space-x-3">
    <% slides.each_with_index do |slide, index| %>
      <button class="w-2 h-2 md:w-3 md:h-3 rounded-full <%= index == 0 ? 'bg-white/60 hover:bg-white' : 'bg-white/30 hover:bg-white/60' %> transition-all duration-300"
              data-action="click->hero-carousel#goToSlide"
        data-slide-index="<%= index %>"
        data-hero-carousel-target="dot"></button>
    <% end %>
  </div>
  <!-- Scroll Indicator (hidden on mobile) -->
  <div class="hidden md:block absolute bottom-4 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/60 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/60 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>
